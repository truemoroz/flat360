mixin icon(iconName, isBlock)
  if isBlock
    //svg(xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink")&attributes(attributes)
    svg&attributes(attributes)
      use(xlink:href=`assets/images/icon.svg#icon_${iconName}`)
  else
    //+e('svg')(xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink")&attributes(attributes)
    +e('svg')&attributes(attributes)
      use(xlink:href=`assets/images/icon.svg#icon_${iconName}`)
